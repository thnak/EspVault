menu "EspVault Configuration"

    config VAULT_WIFI_SSID
        string "WiFi SSID"
        default "myssid"
        help
            SSID (network name) for the device to connect to.

    config VAULT_WIFI_PASSWORD
        string "WiFi Password"
        default "mypassword"
        help
            WiFi password (WPA or WPA2) for the device to use.

    config VAULT_MQTT_BROKER_URI
        string "MQTT Broker URI"
        default "mqtt://broker.example.com"
        help
            URI of the MQTT broker to connect to.
            Format: mqtt://hostname:port or mqtts://hostname:port for TLS

    config VAULT_MQTT_CLIENT_ID
        string "MQTT Client ID"
        default "esp32_vault_node"
        help
            Unique identifier for this MQTT client.

    config VAULT_MQTT_USERNAME
        string "MQTT Username"
        default ""
        help
            Username for MQTT authentication (leave empty if not required).

    config VAULT_MQTT_PASSWORD
        string "MQTT Password"
        default ""
        help
            Password for MQTT authentication (leave empty if not required).

    config VAULT_USE_TLS
        bool "Enable MQTT TLS/SSL"
        default n
        help
            Enable TLS/SSL encryption for MQTT connection.

    config VAULT_HEARTBEAT_INTERVAL_SEC
        int "Heartbeat Interval (seconds)"
        default 30
        range 10 3600
        help
            Interval in seconds between heartbeat messages to the broker.

    config VAULT_SEQ_SYNC_INTERVAL
        int "Sequence Counter Sync Interval"
        default 10
        range 1 1000
        help
            Number of events between NVS synchronization of sequence counter.

    config VAULT_HISTORY_SIZE_MB
        int "History Buffer Size (MB)"
        default 2
        range 1 4
        help
            Size of PSRAM history buffer in megabytes.

    config VAULT_NETWORK_QUEUE_SIZE_MB
        int "Network Queue Size (MB)"
        default 1
        range 1 4
        help
            Size of PSRAM network queue in megabytes.

    config VAULT_ENABLE_RMT
        bool "Enable RMT Peripheral"
        default n
        help
            Enable RMT peripheral for pulse width measurement.

    config VAULT_RMT_RX_GPIO
        int "RMT RX GPIO"
        depends on VAULT_ENABLE_RMT
        default 5
        range 0 39
        help
            GPIO pin for RMT receive (pulse width measurement).

    config VAULT_ENABLE_ESP_NOW
        bool "Enable ESP-NOW"
        default n
        help
            Enable ESP-NOW for local mesh networking.

endmenu
